<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/choix">

    <!-- Cadre contenant la question -->


    <ImageView
        android:id="@+id/vies"
        android:layout_width="185dp"
        android:layout_height="242dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="-23dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/troisvies" />



    <FrameLayout
        android:id="@+id/questionTextLayout"
        android:layout_width="300dp"
        android:layout_height="116dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/transparent_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/questionTextViewText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_background"
            android:text="Ceci est un exemple de question ?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </FrameLayout>

    <!-- Première ligne de boutons -->
    <LinearLayout
        android:id="@+id/boutons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTextLayout"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton1"
            android:layout_width="10dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/transparent_background"
            android:text="Bouton 1"
            android:textColor="#d42630"
            style="@style/ButtonTextStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/transparent_background"
            android:layout_weight="1"
            android:textColor="#d42630"
            android:text="Bouton 2"
            style="@style/ButtonTextStyle"
            />
    </LinearLayout>

    <!-- Deuxième ligne de boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boutons"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:textColor="#d42630"
            android:background="@drawable/transparent_background"
            android:text="Bouton 3"
            style="@style/ButtonTextStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerButton4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:textColor="#d42630"
            android:background="@drawable/transparent_background"
            android:text="Bouton 4"
            style="@style/ButtonTextStyle"/>
    </LinearLayout>


</RelativeLayout>