<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/images">

    <!-- Cadre contenant la question -->


    <ImageView
        android:id="@+id/vies"
        android:layout_width="185dp"
        android:layout_height="242dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="-23dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/troisvies" />



    <FrameLayout
        android:id="@+id/questionImageLayout"
        android:layout_width="266dp"
        android:layout_height="97dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/transparent_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTextViewImage"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/transparent_background"
            android:text="Ceci est un exemple de question ?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/im"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionImageLayout"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answerImageView1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:onClick="onAnswerButtonClick"
            android:src="@drawable/black" />

        <ImageView
            android:id="@+id/answerImageView2"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:onClick="onAnswerButtonClick"
            android:src="@drawable/black" />

    </LinearLayout>

    <!-- DeuxiÃ¨me ligne d'images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answerImageView3"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:onClick="onAnswerButtonClick"
            android:src="@drawable/black" />

        <ImageView
            android:id="@+id/answerImageView4"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:onClick="onAnswerButtonClick"
            android:src="@drawable/black" />

    </LinearLayout>

</RelativeLayout>
